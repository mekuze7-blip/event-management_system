<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.calendar.app.controllers.RegistrationController"
      alignment="CENTER" spacing="20"
      style="-fx-background-color: #2c3e50; -fx-padding: 40;">
    
    <VBox alignment="CENTER" spacing="10">
        <Label text="Event Management System" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Label text="Registration" style="-fx-font-size: 18px; -fx-text-fill: #bdc3c7;"/>
    </VBox>
    
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;" prefWidth="350">
        <TextField fx:id="fullNameField" promptText="Full Name"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
        
        <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c;" visible="false" wrapText="true"/>
        <Label fx:id="successLabel" style="-fx-text-fill: #27ae60;" visible="false" wrapText="true"/>
        
        <Button fx:id="registerButton" text="Register" onAction="#handleRegister" defaultButton="true"/>
        <Button fx:id="backToLoginButton" text="Back to Login" onAction="#handleBackToLogin"/>
    </VBox>
</VBox>