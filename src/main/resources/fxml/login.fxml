<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.calendar.app.controllers.LoginController"
      alignment="CENTER" spacing="20"
      style="-fx-background-color: #2c3e50; -fx-padding: 40;">
    
    <VBox alignment="CENTER" spacing="10">
        <Label text="Event Management System" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Label text="Login" style="-fx-font-size: 18px; -fx-text-fill: #bdc3c7;"/>
    </VBox>
    
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;" prefWidth="350">
        <TextField fx:id="usernameField" promptText="Username" text="testuser"/>
        <PasswordField fx:id="passwordField" promptText="Password" text="testpass"/>
        <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c;" visible="false"/>
        <Button text="Login" onAction="#handleLogin" defaultButton="true"/>
        <Hyperlink text="Don't have an account? Register here" onAction="#handleRegister"/>
    </VBox>
</VBox>